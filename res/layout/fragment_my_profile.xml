<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CommanFragments.MyProfileFragment">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/gradient_background">

        <android.support.v4.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@+id/btnEditProfile">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">


                <LinearLayout
                    android:id="@+id/logoll"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/logo"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:src="@drawable/logo" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="My Profile"
                        android:textColor="#fff"
                        android:textSize="@dimen/_17sdp"
                        android:textStyle="bold" />

                    <View
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/_6sdp" />
                </LinearLayout>


                <LinearLayout
                    android:id="@+id/ll"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_margin="@dimen/_10sdp"
                    android:orientation="vertical">


                    <android.support.design.widget.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/new_style_container"
                        android:textColorHint="@color/grey_40">

                        <android.support.v7.widget.AppCompatEditText
                            android:id="@+id/etProfileName"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_24sdp"
                            android:background="#fff"
                            android:hint="Name"
                            android:paddingLeft="@dimen/_20sdp"
                            android:textColor="#000"
                            android:textSize="@dimen/_13sdp" />

                    </android.support.design.widget.TextInputLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/spacing_middle" />

                    <android.support.design.widget.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/new_style_container"
                        android:textColorHint="@color/grey_40">

                        <android.support.v7.widget.AppCompatEditText
                            android:id="@+id/etProfileEmployeeID"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_24sdp"
                            android:background="#fff"
                            android:hint="Employee Id"
                            android:textColor="#000"
                            android:paddingLeft="@dimen/_20sdp"
                            android:textSize="@dimen/_13sdp" />

                    </android.support.design.widget.TextInputLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/spacing_middle" />

                    <android.support.design.widget.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/new_style_container"
                        android:textColorHint="@color/grey_40">

                        <android.support.v7.widget.AppCompatTextView
                            android:id="@+id/TxtDepartment"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_31sdp"
                            android:background="#fff"
                            android:gravity="center|left"
                            android:hint="Department"
                            android:textColor="#000"
                            android:paddingLeft="@dimen/_20sdp"
                            android:textSize="@dimen/_13sdp" />
                    </android.support.design.widget.TextInputLayout>


                    <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/spacing_middle" />

                    <android.support.design.widget.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/new_style_container"
                        android:textColorHint="@color/grey_40">

                        <android.support.v7.widget.AppCompatEditText
                            android:id="@+id/etProfileMobileNo"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_24sdp"
                            android:background="#fff"
                            android:hint="Mobile No"
                            android:textColor="#000"
                            android:inputType="number"
                            android:maxLength="10"
                            android:paddingLeft="@dimen/_20sdp"
                            android:textSize="@dimen/_13sdp" />
                    </android.support.design.widget.TextInputLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/spacing_middle" />

                    <android.support.design.widget.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/new_style_container"
                        android:textColorHint="@color/grey_40">

                        <android.support.v7.widget.AppCompatEditText
                            android:id="@+id/etProfileEmailId"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_24sdp"
                            android:background="#fff"
                            android:hint="Email Id"
                            android:textColor="#000"
                            android:paddingLeft="@dimen/_20sdp"
                            android:textSize="@dimen/_13sdp" />

                    </android.support.design.widget.TextInputLayout>

                    <View
                        android:layout_width="@dimen/spacing_middle"
                        android:layout_height="@dimen/spacing_middle" />


                </LinearLayout>
            </LinearLayout>
        </android.support.v4.widget.NestedScrollView>


        <Button
            android:id="@+id/btnEditProfile"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_50sdp"
            android:layout_alignParentBottom="true"
            android:background="@drawable/ripple_effect"
            android:text="Edit Profile"
            android:textColor="@color/red_A400"
            android:textSize="@dimen/_13sdp"
            android:textStyle="bold" />
    </RelativeLayout>


</FrameLayout>